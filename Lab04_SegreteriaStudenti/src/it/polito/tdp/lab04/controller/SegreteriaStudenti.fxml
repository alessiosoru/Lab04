            <BorderPane>
               <right>
                  <Button fx:id="resetButton" mnemonicParsing="false" onAction="#handleReset" text="Reset" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </BorderPane.margin>
                  </Button>
               </right>
            </BorderPane>
         </children>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
